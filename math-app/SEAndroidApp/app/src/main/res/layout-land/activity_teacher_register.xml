<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainiacs.seandroidapp.TeacherRegisterActivity"
    android:background="@drawable/registerland">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:layout_weight="0.03">
        </LinearLayout>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_form"
            android:layout_marginTop="15dp"
            android:layout_weight="0.03">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="350dp"
                    android:layout_marginRight="350dp"
                    android:id="@+id/first_name"
                    android:hint="@string/first_name_hint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="350dp"
                    android:layout_marginRight="350dp"
                    android:id="@+id/last_name"
                    android:hint="@string/last_name_hint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="350dp"
                    android:layout_marginRight="350dp"
                    android:id="@+id/email"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"  />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="350dp"
                    android:layout_marginRight="350dp"
                    android:id="@+id/username"
                    android:hint="@string/username_hint" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="350dp"
                    android:layout_marginRight="350dp"
                    android:id="@+id/password"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="350dp"
                    android:layout_marginRight="350dp"
                    android:id="@+id/reenter_password"
                    android:hint="@string/reenter_password_hint" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginLeft="350dp"
                android:layout_marginRight="350dp"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:background="@color/Gray"
                android:text="@string/submit_registraion_button"
                android:onClick="register"
                android:layout_weight="0.03" />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
