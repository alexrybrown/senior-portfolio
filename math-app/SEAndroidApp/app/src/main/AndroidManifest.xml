<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brainiacs.seandroidapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LoginSelectionActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TeacherRegisterActivity" />
        <activity android:name=".TeacherLoginActivity" />
        <activity android:name=".StudentLoginActivity" />
        <activity android:name=".ClassHomeActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".CreateStudentAccountActivity" />
        <activity android:name=".AssignmentCreationActivity" />
        <activity android:name=".AdditionActivity" />
        <activity android:name=".BalloonPoppingActivity" />
        <activity android:name=".DuckGameActivity" />
        <activity android:name=".AddToClassActivity" />
        <activity android:name=".AssignmentGradesActivity"></activity>
    </application>

</manifest>